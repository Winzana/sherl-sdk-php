{
    "name": "sherl/sdk",
    "type": "composer-plugin",
    "description": "Sherl PHP SDK",
    "license": "MIT",
    "scripts": {
      "format": "php-cs-fixer fix src",
      "lint": "./vendor/bin/phpstan analyse src --level 8"
    },
    "autoload": {
        "psr-4": {
            "Sherl\\Sdk\\": "src/"
        }
    },
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "jms/serializer": "^3.28",
        "mangopay/php-sdk-v2": "^3.23"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.35",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10"
    }
}
